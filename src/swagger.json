{
    "openapi": "3.0.0",
    "info": {
        "title": "Atlas API",
        "description": "This is a documentation about the Atlas API.",
        "version": "1.0.0"
    },
    "tags": [
        {
            "name": "users",
            "description": "Users management"
        }
    ],
    "paths": {
        "/users": {
            "post": {
                "tags": ["users"],
                "summary": "Create a user",
                "requestBody": {
                    "required": "true",
                    "description": "Required fields for user creation",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Filipe Rodrigues Lima",
                                    "email": "filiperlima.frl@gmail.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean",
                                            "enum": ["asc"]
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "admin": false,
                                    "id": "f123456-r1254-45l12-k1235-g123123154798",
                                    "name": "Filipe Rodrigues Lima",
                                    "email": "filiperlima.frl@gmail.com",
                                    "created_at": "2022-03-03T07:00:00.0000",
                                    "updated_at": "2022-03-03T07:00:00.0000"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Email already taken",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "error": "This email is already in use"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": ["users"],
                "summary": "Return all users",
                "parameters": [
                    {
                        "in": "header",
                        "name": "user_id",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        },
                        "required": "true"
                    }
                ],
                "description": "Only <code>admin</code> user can access.",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean",
                                            "enum": ["asc"]
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": [
                                    {
                                        "admin": false,
                                        "id": "f123456-r1254-45l12-k1235-g123123154798",
                                        "name": "Filipe Rodrigues Lima",
                                        "email": "filiperlima.frl@gmail.com",
                                        "created_at": "2022-03-03T07:00:00.0000",
                                        "updated_at": "2022-03-03T07:00:00.0000"
                                    },
                                    {
                                        "admin": false,
                                        "id": "k8759-g4564-159r3-l789791-c1567846254",
                                        "name": "Karina Guimar√£es Rodrigues Lima",
                                        "email": "filiperlima@hotmail.com",
                                        "created_at": "2022-03-04T06:31:00.0000",
                                        "updated_at": "2022-03-04T06:31:00.0000"
                                    }
                                ]
                            }
                        }
                    },
                    "400": {
                        "description": "User without permission or user not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "error": "You need to be an administrator to list all users."
                                }
                            }
                        }
                    }
                }
            }
        },            
        "/users/{user_id}": {
            "get": {
                "tags": ["users"],
                "summary": "Return a specific user",
                "parameters": [
                    {
                        "in": "header",
                        "name": "user_id - User id",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        },
                        "required": "true"
                    }
                ],
                "description": "Only <code>admin</code> user can access.",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean",
                                            "enum": ["asc"]
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                        "admin": false,
                                        "id": "f123456-r1254-45l12-k1235-g123123154798",
                                        "name": "Filipe Rodrigues Lima",
                                        "email": "filiperlima.frl@gmail.com",
                                        "created_at": "2022-03-03T07:00:00.0000",
                                        "updated_at": "2022-03-03T07:00:00.0000"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "error": "User not found."
                                }
                            }
                        }
                    }
                }
            }
        },            
        "/users/{user_id}/admin": {
            "patch": {
                "tags": ["users"],
                "summary": "Make a user an admin",
                "parameters": [
                    {
                        "in": "path",
                        "name": "user_id",
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        },
                        "required": "true"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean",
                                            "enum": ["asc"]
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                        "admin": false,
                                        "id": "f123456-r1254-45l12-k1235-g123123154798",
                                        "name": "Filipe Rodrigues Lima",
                                        "email": "filiperlima.frl@gmail.com",
                                        "created_at": "2022-03-03T07:00:00.0000",
                                        "updated_at": "2022-03-03T07:00:00.0000"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "error": "User not found."
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}